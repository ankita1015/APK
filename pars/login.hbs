
<html lang="en">
<head>
  {{!-- <link rel="stylesheet" href="./tempshop.css"> --}}
<link rel="stylesheet" href="./popupstyle.css">

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
  


<!-- Modal -->
<div class="modal" id="myModal">
  <div class="login-container">
  <div class="login-card"></div>
  <div class="login-card">
   
    <form >
      
      <div class="input-container">
         
        <input type="email" id="#{label}" class='login-email'required="required"/>
        <label for="#{label}">Email</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="password" id="#{label}" class="login-password" required="required"/>
        <label for="#{label}">Password</label>
        <div class="bar"></div>
      </div>
      <div class="button-container">
        <button id='login-btn'><span>Login</span></button>
      </div>
      <div class="footer"><a href="#">Forgot your password?</a></div>
      <p id='e-error'></p>
          </form>
  </div>
  <div class="login-card alt">
    <div class="toggle"><i class="fas fa-pencil-alt"></i></div>
    <h1 class="title">Register</h1>
      <div class="login-close"></div>
    </h1>
    <form action="/" method="POST">
      <div class="input-container">
        <input type="#{type}" id="#{label}" name="name" required="required"/>
        <label for="#{label}">full name</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="email" id="#{label}" name='email'required="required"/>
        <label for="#{label}">email</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="#{type}" id="#{label}" name="password" required="required"/>
        <label for="#{label}">Password</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="#{type}" id="#{label}" name='cpassword' required="required"/>
        <label for="#{label}"> Repeat Password</label>
      
        <div class="bar"></div>
        <input type="hidden" name="role" value="0">
      </div>
       
      <div class="button-container">
          
        <button type="submit"><span>Register</span></button>
      </div>
    </form>
  </div>
</div>
</div>
  
</body>
</html>
<script src="./jquery.min.js"></script>
<script src="./popup.js"></script>
<script src="./login-ajax.js"></script>
<script src="./signup-validation.js"></script>
<script>
    $('.toggle').on('click', function() {
  $('.login-container').stop().addClass('active');
});

$('.close').on('click', function() {
  $('.login-container').stop().removeClass('active');
});
</script>
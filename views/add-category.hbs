

<html>
    <head>


</head>
<body>
    {{>admin_header}}
    
        
    <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
      <div class="modal-content">
  

      <!-- Tab panes -->

        <div role="tabpanel" class="tab-pane" id="register">
          <div class="modal-header">
            <h5>Add category</h5>
          </div>
          <div class="modal-body">
            <form action='/add-category' method='POST'  class="row" id='productform'>
        
                <div class="form-group col-sm-12">
                  <label for="product-name">Product</label>
                 <select class="form-control" id='products'name='product'>
                   <option selected disabled>Select Products</option>
                 </select>
                </div>
                    <div class="form-group col-sm-12">
                  <label for="category">Category</label>
                  <input type="text" class="form-control" name="category" id="company-name" placeholder="Add category*">
                </div>
                  <div class="form-group col-sm-12">
                  <label for="description">Description</label>
                  <textarea type="text" class="form-control" name="description" id="company-name" placeholder="Add Decription*"></textarea>
                </div>
               
            <br>
              <div class="modal-footer">
                    <button type="submit" class="btn btn-grey create-account" id='add-product'>Add Product</button>
    
              </div>
            </form>
           
          </div>
        </div>
      </div>
    </div>
  
<script src="./jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $.ajax({
            url:'/load-all-category',
            type:'POST',
            success:function(data){
                    data.forEach(element=>{
                        $('#products').append(`<option value=${element._id}>${element.productname}</option>`)
                    })
      
           }
        })
    })
</script>
</body>
</html>


<html>
<head>


</head>
<body>
    {{>admin_header}}
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                 <form action="/add-category" method="POST" style="background-color: white; margin-top:30px;padding:10px" >
                     <h3 style="text-align: center;">Add Category</h3>
                 <div class="form-group">
                 <label for="Add-category">Add Category</label>
                 <input type="text" class="form-control" name="category" id="add-category"  placeholder="Enter Category">
                 </div>
                 <button type="submit" class="btn btn-primary" style="margin-left:43%;">Add</button>
                 </form>
            </div>
            <div class="col-md-1">

            </div>
            <div class="col-md-6" style="text-align: center; background-color:white;margin-top:30px; padding:10px;">
              <h3 >List of Categories</h3>
              <hr>
              <div class="load-category" >
                  
              </div>
             
            </div>
        </div>
    </div>
 
    
<script src="./jquery.min.js"></script>
<script src="./file.js"></script>

  <script>
    $(document).ready(function(){
        $.ajax({
            url:'/load-all-category',
            type:'POST',
            success:function(data){
                    let output=` <table>
                  <tr>
                      <th>Sr.No</th>
                      <th>Category Name</th>
                      <th>Action</th>
                  </tr>`
                  var c=1;
                    data.forEach(element=>{
                     output=output.concat(`<tr>
                         <td>${c}</td>
                         <td>${element.categoryname}</td>
                         <td>
                             <a href='/edit-category?id=${element._id}' style='margin:5px;background-color:white;'><i class='fas fa-edit' style='color:green;'></i></a>
                             <a href='#' data-id=${element._id} style='margin:5px;background-color:white;'><i class='fas fa-trash-alt' style='color:red;'></i></a>
                         </td>
                         </tr>`)
                         c++;
                        })
                    output=output.concat(`</table>`);
                    $('.load-category').html(output);
                }
        });
     
    });

</script>
</body>
</html>
<link rel="stylesheet" href="./tempshop.css">


    <!-- Compiled and minified JavaScript -->
   

<!-- Mixins-->
<!-- Pen Title-->

<div class="container">
  <div class="card"></div>
  <div class="card">
    <h1 class="title">Login</h1>
    <form>
      <div class="input-container">
        <input type="email" id="#{label}" class='login-email'required="required"/>
        <label for="#{label}">Email</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="password" id="#{label}" class="login-password" required="required"/>
        <label for="#{label}">Password</label>
        <div class="bar"></div>
      </div>
      <div class="button-container">
        <button class='login'><span>Login</span></button>
      </div>
      <div class="footer"><a href="#">Forgot your password?</a></div>
      <p id='e-error'></p>
          </form>
  </div>
  <div class="card alt">
    <div class="toggle"><i class="fas fa-pencil-alt"></i></div>
    <h1 class="title">Register
      <div class="close"></div>
    </h1>
    <form>
      <div class="input-container">
        <input type="#{type}" id="#{label}" class="name" required="required"/>
        <label for="#{label}">full name</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="email" id="#{label}"class='email'required="required"/>
        <label for="#{label}">email</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="#{type}" id="#{label}" class="password" required="required"/>
        <label for="#{label}">Password</label>
        <div class="bar"></div>
      </div>
      <div class="input-container">
        <input type="#{type}" id="#{label}" class='re_password'required="required"/>
        <label for="#{label}"> Repeat Password</label>
      
        <div class="bar"></div>
      </div>
       
      <div class="button-container">
          
        <button class="save"><span>Register</span></button>
      </div>
>
    </form>
  </div>
</div>
<script src="./jquery.min.js"></script>
<script src="./shop-validation.js"></script>
<script>
    $('.toggle').on('click', function() {
  $('.container').stop().addClass('active');
});

$('.close').on('click', function() {
  $('.container').stop().removeClass('active');
});
</script>
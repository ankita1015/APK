<html>

<head>
{{>styleing}}
<link rel="stylesheet" href="./login.css">
</head>
<body>
    {{>login}}
{{>header}}

    <div id="main-content">
      <div class="container-fluid">
        <div class="row main-container">

          {{#each category}}
          
            <div class="col-md-1 category-container">
                 <div  id='category-post'>
             <a class="category-post-img" href="">
                <img src="images/post-format.jpg" alt=""/>
                     {{!-- for ratings  --}}
             </a>
           <div class="category-content" >
                <h5><a href="/product-list?product_id={{this._id}}">{{this.productname}}</a></h5>
                 
                  </div>
             </div>
            </div>
           {{/each}}
</div>          
                <!-- post-container -->
                  
  <div class="row main-slider">
  <div class="outer-wrapper">
  
  <div class="s-wrap s-type-1" role="slider">
    <input type="radio" id="s-1" name="slider-control" checked="checked">
    <input type="radio" id="s-2" name="slider-control">
    <input type="radio" id="s-3" name="slider-control">
    <input type="radio" id="s-4" name="slider-control">
    <input type="radio" id="s-5" name="slider-control">
    <ul class="s-content">
   
      <li src='{{lastproduct.[0].images.[0]}}' class="s-item s-item-1"></li>
      <li src='{{lastproduct.images.[1]}}' class="s-item s-item-2"></li>
      <li src='{{lastproduct.images.[2]}}' class="s-item s-item-3"></li>
      <li src='{{lastproduct.images.[0]}}' class="s-item s-item-4"></li>
      <li src='{{lastproduct.images.[1]}}' class="s-item s-item-5"></li>
    </ul>
    <div class="s-control">
      <label class="s-c-1" for="s-1"></label>
      <label class="s-c-2" for="s-2"></label>
      <label class="s-c-3" for="s-3"></label>
      <label class="s-c-4" for="s-4"></label>
      <label class="s-c-5" for="s-5"></label>
    </div>
    <div class="s-nav">
      <label class="s-nav-1 right" for="s-2"></label>
      <label class="s-nav-2 left" for="s-1"></label>
      <label class="s-nav-2 right" for="s-3"></label>
      <label class="s-nav-3 left" for="s-2"></label>
      <label class="s-nav-3 right" for="s-4"></label>
      <label class="s-nav-4 left" for="s-3"></label>
      <label class="s-nav-4 right" for="s-5"></label>
      <label class="s-nav-5 left" for="s-4"></label>
    </div>
  </div>
</div>
  </div>
  <div class="container-fluid" style="padding:10px;">
    <div id='product-title'>Products</div>
    {{#each products}}
  <div class="products" data-id={{this._id}}>
    <div id='product'>
     <a href="/single-product?product_id={{this._id}}">
     <img src='{{this.images.[0]}}' alt='product'>
     </a>
    </div>
    <div id='product-content'>
    <h6><b>{{this.product}}</b></h6>
    <h6><b>Rs.{{this.total_price}}</b></h6>
    
        </div>
  </div>
  
  {{/each}}
  </div>
  </div>
  {{>footer}}
  <script src='./jquery.min.js'></script>
  <script src="./popup.js"></script>
  <script src="./add-cart.js"></script>
<script>
  $(document).ready(function(){
    $('.products').click(function(){
      let id=$(this).data('id');
      
         $.ajax({
           url:'/single-product',
           type:'POST',
           data:{id},
           success:function(data){
             
           }
         })
    })
  })
</script>


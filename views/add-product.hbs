

<html>
    <head>

{{>uploadcss}}
</head>
<body>
    {{>seller_header}}
    
        
    <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
      <div class="modal-content">
  

      <!-- Tab panes -->

        <div role="tabpanel" class="tab-pane" id="register">
          <div class="modal-header">
            <h5>Add Product to {{shopname}}</h5>
          </div>
          <div class="modal-body">
            <form action='/product' method='POST' enctype="multipart/form-data" class="row" id='productform'>
        
                <div class="form-group col-sm-12">
                  <label for="product-name">Product</label>
                  <input type="text" class="form-control" name="product" id="company-name" placeholder="Product Name*">
                </div>
                <div class="form-group col-sm-12">
                  <label for="batchid">batch id</label>
                  <input type="text" class="form-control" name='batchid' id="address-one" placeholder="Batch Id">
                </div>
                <div class="form-group col-sm-12">
                  <label for="Description">Description</label>
                  <input type="text" class="form-control" name="description" id="address-two" placeholder="Description*">
                </div>
                <div class="form-group col-sm-3">
                  <label for="gst">Gst</label>
                  <input type="number" class="form-control" name='gst' id="gst" placeholder="Gst(%)">
                </div>
                <div class="form-group col-sm-6">
                  <label for="Qty">Quantity</label>
                  <input type="text" class="form-control" name='Qty'id="city" placeholder="Qty*">
                </div>
                <div class="form-group col-sm-6">
                  <label for="price">Price</label>
                  <input type="number" class="form-control" name='price' id="price" placeholder="Price*">
                </div>
                <div class="form-group col-sm-3">
                  <label for="total_price">total Price(gst)</label>
                  <input type="text" class="form-control" id="total_price" name="total_price" placeholder="Total Price" readonly>
                </div>
             
              </div>
            
                 <div id="upload_button" class="col-md-3">
                       <label id='uploadlabel'>
	                       
                          <i class="fa fa-plus"></i>
                          <input type="file" id='input' name='images' multiple/>
                        
                         </label>
                      </div>
                          <p id='upload-error'></p>

               <div id='imges'>

               </div>
            <br>
              <div class="modal-footer">
                    <button type="submit" class="btn btn-grey create-account" id='add-product'>Add Product</button>
    
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  
<script src="./jquery.min.js"></script>
<script src="./file.js"></script>
</body>
</html>
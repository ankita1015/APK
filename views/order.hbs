<html>
    <head>
{{>styleing}}

</head>
<body>
    {{>header}}
    <div id="main-content">
        <div class="container-fluid">
            <div class="row">
                
                <div class="col-md-12">
                  <!-- post-container -->
                    <div class="post-container">
                        <div class="post-content single-post">
                           {{#each data}} 
                    
                            <div class="post-information container order-container">
                               <div class="order-img row ">
                                   <div class="col-md-1 side-images">
                                        <img class='view-img' src="{{this.productId.images.[0]}}">
                                        <img class='view-img' src="{{this.productId.images.[1]}}">
                                   </div>
                        <div class="col-md-3 img-container">
                         <img id='order-img' src="{{this.productId.images.[0]}}">
                       
                               </div>
                               <div class="col-md-1"></div>
                               <div class="col-md-5 orders-detail">
                                   <p>{{this.shopId.shopname}}</p>
                                   <p>Decription about Products</p>
                                   <p>category</p>
                                   <p>{{this.productId.price}}</p>
                                   <p>{{this.productId.total_price}}</p>
                                   <hr>
                                   <h4>Store Details</h4>
                                   <hr> 
                                   <p>{{this.shopId.shopname}}</p>
                                   <p>{{this.shopId.address}}</p>
                                   <p>{{this.shopId.mobileNo}}</p>
                                   <hr>
                                   <h4>Personal Details</h4>
                                   <hr>
                                   <p>Delivery Address:</p>
                                   <p>{{this.customerId.Address}}</p>
                                 <a class="read-more pull-left"   href="#">Change Address</a>
                                 <br>
                                  <hr>                              
                                 <a class="read-more pull-left"   href="#">Cancle Order</a>
                               </div>
                               </div> 
                               
                            </div>
                           
                           {{/each}}
                           <hr>
                        </div>
                    </div>
                    <!-- /post-container -->
                </div>
               
            </div>
        </div>
    </div>
    <script src="./jquery.min.js"></script>
    <script>
        $('.view-img').click(function(){
            let src=$(this).attr('src');
            const order_img=document.getElementById('order-img');
            console.log(order_img);
            order_img.src=src;
        })
    </script>
</body>
</html>
